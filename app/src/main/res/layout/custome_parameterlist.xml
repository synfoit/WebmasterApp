<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    android:orientation="horizontal"
    android:weightSum="5">

    <TextView
        android:id="@+id/tv_index"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="1.0"
        android:fontFamily="@font/nunitonans_regular"
        android:padding="5dp"
        android:scrollbars="horizontal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry" />
    <TextView
        android:id="@+id/tv_parameterName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_weight="2.0"
        android:fontFamily="@font/nunitonans_regular"
        android:padding="5dp"
        android:scrollbars="horizontal"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        tools:ignore="RtlSymmetry" />


    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_dropdown"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.Dense.ExposedDropdownMenu"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.0"
        android:background="@null"
        android:paddingTop="-5dp"
        android:scrollbars="horizontal"
        android:visibility="gone"
        app:boxBackgroundColor="@color/white"
        tools:ignore="RtlSymmetry">

        <AutoCompleteTextView
            android:id="@+id/act_dropdown"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="false"
            android:fontFamily="@font/nunitonans_regular"
            android:inputType="none"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:scrollbars="horizontal"
            android:visibility="gone"
            android:text="@string/select_value"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="12sp"
            tools:ignore="LabelFor" />
    </com.google.android.material.textfield.TextInputLayout>

    <EditText
        android:id="@+id/et_paravalue"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.0"
        android:fontFamily="@font/nunitonans_regular"
        android:inputType="text"
        android:padding="5dp"
        android:paddingEnd="15dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"
        tools:ignore="RtlSymmetry" />
    <EditText
        android:id="@+id/et_intparavalue"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.0"
        android:fontFamily="@font/nunitonans_regular"
        android:inputType="number"
        android:padding="5dp"
        android:paddingEnd="15dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:visibility="gone"
        tools:ignore="RtlSymmetry" />
    <RadioGroup
        android:id="@+id/groupradio"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="2.0"
        android:visibility="gone"
        android:focusable="true"
        android:orientation="horizontal"
        android:fontFamily="@font/nunitonans_regular">

        <!-- In RadioGroup create the 1 Radio Button-->
        <!-- like this we will add some more Radio Button-->
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radia_true"
            android:text="True"
            android:focusable="true"
            android:textSize="12sp"/>

        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radia_false"
            android:text="False"
            android:focusable="true"
            android:textSize="12sp"/>




    </RadioGroup>
</LinearLayout>